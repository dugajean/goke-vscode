{
  "name": "goke",
  "displayName": "Goke",
  "publisher": "dugajean",
  "description": "Run Goke tasks easily from within VS Code.",
  "license": "MIT",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:goke.yml",
    "workspaceContains:goke.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "gokeTasks",
          "name": "Goke Tasks"
        }
      ]
    },
    "commands": [
      {
        "command": "gokeTasks.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "gokeTasks.runTask",
        "title": "Run",
        "icon": {
          "light": "resources/play.svg",
          "dark": "resources/play.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gokeTasks.refresh",
          "when": "view == gokeTasks",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gokeTasks.runTask",
          "when": "view == gokeTasks",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "2.7.1",
    "typescript": "^4.8.4",
    "vsce": "^2.13.0"
  }
}
